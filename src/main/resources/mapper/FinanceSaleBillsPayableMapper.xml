    <!--List<String> getSalePayChart();-->
    <select id="getSalePayChart" resultType="java.lang.String">
        SELECT
        SUM(ACTUAL_BALANCE)
        FROM a_sale_bills_payable
        WHERE date_format(AUDIT_TIME,'%Y')=Year(CurDate())
        AND AUDIT_STATE=3
        GROUP BY ACTUAL_BALANCE
        ORDER BY AUDIT_TIME
