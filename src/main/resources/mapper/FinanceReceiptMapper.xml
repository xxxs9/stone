        <result property="receiveId" column="RECEIVE_ID" jdbcType="VARCHAR"/>
        <result property="receiveType" column="RECEIVE_TYPE" jdbcType="INTEGER"/>
        <result property="balance" column="BALANCE" jdbcType="VARCHAR"/>
        <result property="documentMaker" column="DOCUMENT_MAKER" jdbcType="VARCHAR"/>
        <result property="documentMakeTime" column="DOCUMENT_MAKE_TIME" jdbcType="VARCHAR"/>-->
    <insert id="add" parameterType="com.gameloft9.demo.dataaccess.model.system.SysFinancePayment">
        insert into a_recepit
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">
                ID,
            </if>
            <if test="receiveId != null and receiveId != ''">
                RECEIVE_ID,
            </if>
            <if test="receiveType != null and receiveType != ''">
                RECEIVE_TYPE,
            </if>
            <if test="balance != null and balance != ''">
                BALANCE,
            </if>
            <if test="documentMaker != null and documentMaker != ''">
                DOCUMENT_MAKER,
            </if>
            <if test="documentMakeTime != null and documentMakeTime != ''">
                DOCUMENT_MAKE_TIME,
            </if>
        </trim>
        <trim prefix=" values(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">
                #{id,jdbcType=VARCHAR},
            </if>
            <if test="receiveId != null and receiveId != ''">
                #{receiveId,jdbcType=VARCHAR},
            </if>
            <if test="receiveType != null and receiveType != ''">
                #{receiveType,jdbcType=INTEGER},
            </if>
            <if test="balance != null and balance != ''">
                #{balance,jdbcType=VARCHAR},
            </if>
            <if test="documentMaker != null and documentMaker != ''">
                #{documentMaker,jdbcType=VARCHAR},
            </if>
            <if test="documentMakeTime != null and documentMakeTime != ''">
                #{documentMakeTime,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <!--修改 update()-->
    <update id="update" parameterType="com.gameloft9.demo.dataaccess.model.system.SysFinanceChargeOff">
        update a_receipt
        <set>
            <if test="payId != null and payId != ''">
                PAY_ID = #{payId,jdbcType=VARCHAR},
            </if>
            <if test="shouldPay != null and shouldPay != ''">
                SHOULD_PAY = #{shouldPay,jdbcType=VARCHAR},
            </if>
            <if test="actualPay != null and actualPay != ''">
               ACTUAL_PAY =  #{actualPay,jdbcType=VARCHAR},
            </if>
            <if test="arreara != null and arreara != ''">
                ARREARA = #{arreara,jdbcType=VARCHAR}
            </if>
        </set>
        <where>
            <if test="id != null and id != ''">
                and id = #{ID,jdbcType=VARCHAR}
            </if>
        </where>
    </update>

    <!--删除   delete()-->
    <delete id="delete" parameterType="java.lang.String">
        delete from a_receipt
        <where>
            <if test="id != null and id != ''">
                and id = = #{ID,jdbcType=VARCHAR}
            </if>
        </where>
    </delete>

</mapper>