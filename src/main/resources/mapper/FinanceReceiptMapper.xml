<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gameloft9.demo.dataaccess.dao.system.FinanceReceiptMapper" >

    <resultMap id="receiptMap" type="com.gameloft9.demo.dataaccess.model.system.SysFinanceReceipt">
        <id property="id" column="ID" jdbcType="VARCHAR"/>
        <result property="receiveId" column="RECEIVE_ID" jdbcType="VARCHAR"/>
        <result property="receiveType" column="RECEIVE_TYPE" jdbcType="INTEGER"/>
        <result property="balance" column="BALANCE" jdbcType="VARCHAR"/>
        <result property="documentMaker" column="DOCUMENT_MAKER" jdbcType="VARCHAR"/>
        <result property="documentMakeTime" column="DOCUMENT_MAKE_TIME" jdbcType="VARCHAR"/>
    </resultMap>

    <!--TODO...优化-->
    <!--获取所有  getAll
    List<SysFinanceReceipt> getAll(
            @Param("start") int start,
            @Param("end") int end,
            @Param("receiveType") int receiveType
    );-->
    <select id="getAll" resultMap="receiptMap">
      select
        *
      from
        a_recepit
        <where>
            <if test="receiveType != null and receiveType != ''">
                RECEIVE_TYPE=#{receiveType,jdbcType=INTEGER}
            </if>
        </where>
        limit #{start},#{end}
    </select>


    <!--TODO...优化-->
    <!--获取条件查询总条数  int getCount-->
    <select id="getCount" resultType="java.lang.Integer">
        select count(1)
        from
        a_recepit
        <where>
            <if test="receiveType != null and receiveType != ''">
                RECEIVE_TYPE=#{receiveType,jdbcType=INTEGER}
            </if>
        </where>
    </select>

    <!--添加 add()-->
